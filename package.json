// package.json은 프로젝트의 이름, 버전, 스크립트와 같은 기본적인 프로젝트의 정의 포함

{
  "name": "chrome-extension-react",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": { 
    // 터미널에서 npm run dev를 실행하면 프로젝트 빌드 뿐만 아니라 코드 파일을 변경할 때마다 다시 빌드함
    "dev": "webpack --watch --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^5.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "babel-loader": "^8.2.3",
    "copy-webpack-plugin": "^10.2.1",
    "html-webpack-plugin": "^5.5.0",
    "webpack": "^5.67.0",
    "webpack-cli": "^4.9.2",
    "webpack-merge": "^5.8.0"
  }
}
